{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.html",
      "use": "@vercel/static" 
    },
    {
      "src": "src/**/*.js",
      "use": "@vercel/static" 
    },
    {
      "src": "src/**/*.css", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "/src/$1"
    }
  ],
  "static": {
    "includeFiles": ["public/assets/**"] 
  }
}
